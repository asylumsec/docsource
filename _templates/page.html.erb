    <!-- Patternfly JS -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/js/bootstrap-select.min.js"></script>
    <script src="<%= File.join(javascripts_path, "patternfly.min.js") %>" type="text/javascript"></script>
    <script src="<%= File.join(javascripts_path, "bootstrap-offcanvas.js") %>" type="text/javascript"></script>

    <!-- Favicon -->

    <link href="<%= File.join(images_path, 'shadowman.ico') %>" rel="shortcut icon" type="text/css">
