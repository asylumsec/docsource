    <link rel="apple-touch-icon-precomposed" sizes="57x57" href="<%= File.join(images_path, 'apple-touch-icon-precomposed-57.png') %>">
    <!-- Patternfly CSS -->
    <link href="<%= File.join(css_path, 'asciibinder.css') %>" rel="stylesheet" />
